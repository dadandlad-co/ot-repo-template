#----------------------------------------------------------------------------
# OpenTofu Repository Template - Environment Configuration
# Copy this file to .env and customize for your project
#----------------------------------------------------------------------------

#----------------------------------------------------------------------------
# Core Features (boolean: true/false)
#----------------------------------------------------------------------------

# Enable comprehensive security scanning (tfsec, checkov, trufflehog)
ENABLE_SECURITY_SCANNING=true

# Enable automated documentation generation and updates
ENABLE_DOCUMENTATION_AUTOMATION=true

# Enable automated release management and changelog generation
ENABLE_RELEASE_AUTOMATION=true

# Enable git pre-commit hooks for validation
ENABLE_PRE_COMMIT_HOOKS=true

# Enable example validation in CI/CD pipelines
ENABLE_EXAMPLE_VALIDATION=true

#----------------------------------------------------------------------------
# Provider Support (boolean: true/false)
# Enable provider-specific tooling, linting, and examples
#----------------------------------------------------------------------------

# AWS Provider support (tflint rules, examples, tools)
OPENTOFU_PROVIDER_AWS=false

# Google Cloud Provider support (tflint rules, examples, tools)
OPENTOFU_PROVIDER_GCP=false

# Azure Provider support (tflint rules, examples, tools)
OPENTOFU_PROVIDER_AZURE=false

# GitHub Provider support (tflint rules, examples, tools)
OPENTOFU_PROVIDER_GITHUB=false

#----------------------------------------------------------------------------
# Tool Integration (boolean: true/false)
# Control which security and development tools are enabled
#----------------------------------------------------------------------------

# Enable tfsec infrastructure security scanner
ENABLE_TFSEC=true

# Enable Checkov policy-as-code security scanner
ENABLE_CHECKOV=true

# Enable Infracost for cost estimation (requires API key)
ENABLE_INFRACOST=false

# Enable Boilr templating system integration
ENABLE_BOILR_TEMPLATES=false

# Enable VS Code/Cursor/Windsurf IDE configuration
ENABLE_VS_CODE_CONFIG=true

#----------------------------------------------------------------------------
# Organization Settings (string values)
# Customize for your organization
#----------------------------------------------------------------------------

# Your organization or username (used in documentation and examples)
ORGANIZATION_NAME="dadandlad.co"

# Prefix for project names (leave empty if not needed)
PROJECT_PREFIX=""

# Default license for new projects
DEFAULT_LICENSE="MIT"

# Default OpenTofu version constraint
OPENTOFU_VERSION_CONSTRAINT=">= 1.8.0"

# Default region for cloud providers (when applicable)
DEFAULT_REGION="us-east-1"

#----------------------------------------------------------------------------
# Development Environment Settings
#----------------------------------------------------------------------------

# Enable verbose output during setup and tasks
VERBOSE_OUTPUT=false

# Skip confirmation prompts during setup (for automation)
AUTO_APPROVE_SETUP=false

# Custom brew prefix (for non-standard Homebrew installations)
CUSTOM_BREW_PREFIX=""

#----------------------------------------------------------------------------
# Advanced Configuration
# Modify these only if you understand the implications
#----------------------------------------------------------------------------

# Custom pre-commit configuration file name
PRE_COMMIT_CONFIG_FILE=".pre-commit-config.yaml"

# Custom Taskfile location
TASKFILE_LOCATION="Taskfile.yaml"

# Enable parallel task execution where possible
ENABLE_PARALLEL_EXECUTION=true

# Maximum number of parallel processes
MAX_PARALLEL_PROCESSES=4
